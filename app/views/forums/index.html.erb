<div align="right" style="margin:2em">
<%  if logged_in?%>
<%= link_to "logout", session_path, :method=>"delete" %>
<%else%>
<%=  link_to "login", session_path, :method=>"post"%>
<%end%>
</div>

<h1>Listing forums</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @forums.each do |forum| %>
  <tr>
    <td><%=link_to forum.name, forum_topics_path(forum) %></td>
    <td><%=h forum.description %></td>
    <td><%= link_to 'Show', forum %></td>
    <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
    <td><%= link_to 'Destroy', forum, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New forum', new_forum_path %>