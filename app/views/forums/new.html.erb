<h1>New forum</h1>
<% remote_form_for(@forum, :update => 'main-div') do |f| %>
<%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>  

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', forums_path %>