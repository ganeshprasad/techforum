  <p class="nav-left">
    <% if logged_in? %>
      Logged in as <b><%= link_to h(current_user.login), current_user %></b> 
    <% else %>
      You are not logged in
    <% end %>
  </p>
  <p class="nav-right">
    <% if logged_in? %>
      <% if current_controller == 'home' %><%= link_to 'Start a New Topic', new_topic_path %>
